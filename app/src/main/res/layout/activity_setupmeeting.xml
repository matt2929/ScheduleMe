<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userhome_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="2dp"
                android:text="Select the day you want to meet"
                android:textAlignment="center"
                android:textSize="36sp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/datePicker"
                android:layout_weight="4.14"
                android:headerBackground="@color/colorPrimary" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:id="@+id/durations"
                    android:layout_weight="1" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/friendListViewZhuZhu"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:text="save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveMeeting"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="#073966"
                android:fontFamily="sans-serif-smallcaps"
                android:typeface="normal" />

        </LinearLayout>
    </ScrollView>