<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userhome_image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#073966"
                android:fontFamily="sans-serif-smallcaps"
                android:typeface="normal"
                android:layout_marginBottom="5dp"
                android:text="Select the day you want to meet"/>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/datePicker"
                android:layout_weight="4.14" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:id="@+id/durations"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendListViewZhuZhu" />

            <Button
                android:text="save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveMeeting"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="#073966"
                android:fontFamily="sans-serif-smallcaps"
                android:typeface="normal" />

        </LinearLayout>
    </ScrollView>