<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSetMeeting"
    android:background="@drawable/userhome_image">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#073966"
        android:fontFamily="sans-serif-smallcaps"
        android:typeface="normal"
        android:layout_marginBottom="5dp"
        android:text="Select the day you want to meet"/>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/datePicker" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/durations"/>

    <Button
        android:text="save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveMeeting"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:clickable="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#073966"
        android:fontFamily="sans-serif-smallcaps"
        android:typeface="normal" />
</LinearLayout>